                   
.room-item {
    width: 45vw;
    height: 45vw;
    overflow: hidden;
    margin-top: 4px;
    border-radius: 7px;
    position: relative;
}
.cover {
    height: 100%;
    width: 100%
}
.title {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 35px;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: left;
    line-height: 35px;
    padding: 0 8px;
    background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.00) 0%, rgba(0, 0, 0, 0.50) 100%);
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

